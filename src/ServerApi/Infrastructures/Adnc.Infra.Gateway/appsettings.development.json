{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ThreadPoolSettings": {
    "MinThreads": 8,
    "MinCompletionPortThreads": 8,
    "MaxThreads": 32767,
    "MaxCompletionPortThreads": 1000
  },
  "AllowedHosts": "*",
  "CorsHosts": "http://localhost:5001",
  "SkyWalking": {
    "ServiceName": "adnc.gateway.dev",
    "Namespace": "adnc",
    "HeaderVersions": [
      "sw8"
    ],
    "Sampling": {
      "SamplePer3Secs": -1,
      "Percentage": -1.0,
      "IgnorePaths": [ "/*/health-24b01005-a76a-4b3b-8fb1-5e0f2e9564fb", "http://**/appsettings", "/**/swagger.json" ]
    },
    "Logging": {
      "Level": "Error",
      "FilePath": "txtlogs\\skyapm-{Date}.log"
    },
    "Transport": {
      "Interval": 3000,
      "ProtocolVersion": "v8",
      "QueueSize": 30000,
      "BatchSize": 3000,
      "gRPC": {
        "Servers": "114.55.27.56:11800",
        "Timeout": 10000,
        "ConnectTimeout": 10000,
        "ReportTimeout": 600000,
        "Authentication": ""
      }
    },
    "GlobalConfiguration": {
      "BaseUrl": "http://localhost:8888",
      "ServiceDiscoveryProvider": {
        "Scheme": "http",
        "Host": "114.55.27.56",
        "Port": 8550,
        "Type": "Consul"
      }
    },
    "Routes": [
      {
        "UpstreamPathTemplate": "/usr{everything}",
        "UpstreamHeaderTransform": {
          "From": "gateway",
          //"X-Forwarded-For": "{RemoteIpAddress}",
          "X-Forwarded-For": "localhost:5010"
        },
        "UpstreamHttpMethod": [
          "Get",
          "Put",
          "Post",
          "Delete"
        ],
        "DownstreamScheme": "http",
        "DownstreamPathTemplate": "/usr{everything}",
        "DownstreamHeaderTransform": {
          //"X-Forwarded-For": "{RemoteIpAddress}"
          "X-Forwarded-For": "localhost:5010"
        },
        "ServiceName": "adnc.usr.webapi",
        "LoadBalancerOptions": {
          "Type": "RoundRobin"
        }
      },
      {
        "UpstreamPathTemplate": "/maint{everything}",
        "UpstreamHttpMethod": [
          "Get",
          "Put",
          "Post",
          "Delete"
        ],
        "DownstreamScheme": "http",
        "DownstreamPathTemplate": "/maint{everything}",
        "ServiceName": "adnc.maint.webapi",
        "LoadBalancerOptions": {
          "Type": "RoundRobin"
        }
      },
      {
        "UpstreamPathTemplate": "/cus{everything}",
        "UpstreamHttpMethod": [
          "Get",
          "Put",
          "Post",
          "Delete"
        ],
        "DownstreamScheme": "http",
        "DownstreamPathTemplate": "/cus{everything}",
        "ServiceName": "adnc.cus.webapi",
        "LoadBalancerOptions": {
          "Type": "RoundRobin"
        }
      }
    ]
  }
}